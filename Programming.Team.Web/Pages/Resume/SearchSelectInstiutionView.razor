@inherits ReactiveComponentBase<SearchSelectInstiutionViewModel>

@if (ViewModel != null)
{
    <AlertView Alert="ViewModel.Alert" />
    <MudStack>
        <MudAutocomplete T="Institution" CoerceText="true" Label="Institution" ToStringFunc="c => c.Name"
                         @bind-Value="ViewModel.Selected" DebounceInterval="250" SearchFunc="ViewModel.Search.BindCommand()" />
        @if (ViewModel.CanAdd)
        {
            <MudButton OnClick="ViewModel.StartAdd.BindCommand<MouseEventArgs>()">Add Institution</MudButton>
            <AddInstitutionView ViewModel="ViewModel.AddViewModel" />
        }
    </MudStack>

}

